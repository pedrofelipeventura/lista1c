#include <stdio.h>
#include <math.h>

int main() {
    // Declaração das variáveis para os números e as médias
    float num1, num2, num3;
    float mediaAritmetica, mediaGeometrica;

    // Solicita ao usuário que insira os três números
    printf("Digite o primeiro número: ");
    scanf("%f", &num1);
    printf("Digite o segundo número: ");
    scanf("%f", &num2);
    printf("Digite o terceiro número: ");
    scanf("%f", &num3);

    // Calcula a média aritmética
    mediaAritmetica = (num1 + num2 + num3) / 3;

    // Calcula a média geométrica
    mediaGeometrica = pow(num1 * num2 * num3, 1.0 / 3.0);

    // Exibe os resultados
    printf("Média Aritmética: %.2f\n", mediaAritmetica);
    printf("Média Geométrica: %.2f\n", mediaGeometrica);

    return 0;
}
