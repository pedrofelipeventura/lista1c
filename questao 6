#include <stdio.h>
// Faça um programa que leia uma quantidade de horas, minutos e segundos e imprima o total de segundos. 


 
void segundos(){
  int horas, minutos, segundos, total;
  printf("Digite o total de horas");
  scanf("%d", &horas);
  printf("Digite o total de minutos");
  scanf("%d", &minutos);
  printf("Digite o total de segundos");
  scanf("%d", &segundos);
  total = (horas * 3600) + (minutos * 60) + segundos;
  printf("O total de segundos é igual a: %d", total);

}

int main(void) {
  segundos();
  return 0;
}
